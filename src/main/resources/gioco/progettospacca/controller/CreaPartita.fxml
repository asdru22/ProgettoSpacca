<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gioco.progettospacca.controller.CreaController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <HBox alignment="TOP_CENTER" prefWidth="20.0" />
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="140.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Nomi giocatori:">
                           <font>
                              <Font name="Candara" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <TextField fx:id="txt_gioc1">
                           <font>
                              <Font name="Candara" size="12.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="txt_gioc2">
                           <font>
                              <Font name="Candara" size="12.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="txt_gioc3">
                           <font>
                              <Font name="Candara" size="12.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="txt_gioc4">
                           <font>
                              <Font name="Candara" size="12.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="txt_gioc5">
                           <font>
                              <Font name="Candara" size="12.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox>
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="btn_crea" mnemonicParsing="false" onAction="#EventoCreaCodicePartita" stylesheets="@style.css" text="Crea Partita">
                           <font>
                              <Font name="Candara" size="12.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <HBox alignment="TOP_CENTER">
                     <children>
                        <Label text="Codice partita">
                           <font>
                              <Font name="Candara" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" minHeight="30.0">
                     <children>
                        <Label fx:id="lbl_code" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="50.0">
                     <children>
                        <Button fx:id="btn_backHome" mnemonicParsing="false" onAction="#BackToHome" text="Torna alla home" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <HBox />
         </children>
      </HBox>
   </children>
</VBox>
