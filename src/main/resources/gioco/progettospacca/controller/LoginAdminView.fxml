<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gioco.progettospacca.controller.LoginController">
   <children>
      <!-- Aggiunta dell'AnchorPane all'interno del Pane -->
      <AnchorPane>
         <children>
            <Button fx:id="btn_back" focusTraversable="false" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onKeyPressed="#keyEvent" onMouseClicked="#backToHome" text="❮" />
            <Label layoutX="146.0" layoutY="15.0" text="LOGIN AMMINISTRATORE" textAlignment="CENTER">
               <font>
                  <Font name="Candara" size="12.0" />
               </font>
            </Label>
            <Label layoutX="55.0" layoutY="108.0" text="Username:   ">
               <font>
                  <Font name="Candara" size="12.0" />
               </font>
            </Label>
            <TextField id="txt_user" fx:id="txt_user" layoutX="146.0" layoutY="104.0" maxWidth="120.0" onKeyPressed="#keyEvent">
               <font>
                  <Font name="Candara" size="12.0" />
               </font>
            </TextField>
            <Label layoutX="55.0" layoutY="152.0" text="Password:    ">
               <font>
                  <Font name="Candara" size="12.0" />
               </font>
            </Label>
            <PasswordField fx:id="txt_psw" focusTraversable="false" layoutX="146.0" layoutY="147.0" maxWidth="120.0" onKeyPressed="#keyEvent" />
            <Button fx:id="btn_login" focusTraversable="false" layoutX="183.0" layoutY="195.0" mnemonicParsing="false" onKeyPressed="#keyEvent" onMouseClicked="#loginAdmin" text="Login" />
            <Label fx:id="lbl_error" layoutX="10.0" layoutY="190.0" />
         </children>
      </AnchorPane>
   </children>
</Pane>
