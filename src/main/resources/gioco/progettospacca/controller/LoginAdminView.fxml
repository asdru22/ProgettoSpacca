                  <Font name="Candara" size="15.0" />
               </font>
            </Label>
            <TextField id="txt_user" fx:id="txt_user" layoutX="444.0" layoutY="245.0" maxWidth="182.0" onKeyPressed="#keyEvent" prefHeight="38.0" prefWidth="182.0">
