<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gioco.progettospacca.controller.GiocaController">
   <children>
      <VBox prefWidth="20.0">
         <children>
            <Button fx:id="btn_back" mnemonicParsing="false" onAction="#BackToHome" text="❮" />
         </children></VBox>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Nome">
                     <font>
                        <Font name="Candara" size="12.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <VBox alignment="CENTER" prefWidth="100.0">
               <children>
                  <TextField />
                  <TextField />
                  <TextField />
                  <TextField />
                  <TextField />
               </children>
            </VBox>
            <HBox prefHeight="20.0" />
         </children>
      </VBox>
      <VBox prefWidth="20.0" />
      <VBox alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Inserisci codice partita">
                     <font>
                        <Font name="Candara" size="12.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <VBox alignment="CENTER" prefWidth="100.0">
               <children>
                  <TextField />
                  <TextField />
                  <TextField />
                  <TextField />
                  <TextField />
                  <HBox prefHeight="20.0" />
               </children>
            </VBox>
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Button fx:id="btn_entra" mnemonicParsing="false" onAction="#entraInPartita" text="Entra">
               <font>
                  <Font name="Candara" size="12.0" />
               </font>
            </Button>
         </children>
      </VBox>
      <VBox prefWidth="20.0" />
   </children>
</HBox>
